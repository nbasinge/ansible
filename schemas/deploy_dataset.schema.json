{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MyCareCRM Deploy Dataset",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "company_code",
    "environment",
    "hyperv_host",
    "vlan_id",
    "vm_app_name",
    "vm_db_name",
    "vm_api_name",
    "vm_app_ip",
    "vm_db_ip",
    "vm_api_ip",
    "vm_app_cpu",
    "vm_app_memory",
    "vm_db_cpu",
    "vm_db_memory",
    "vm_api_cpu",
    "vm_api_memory",
    "vm_app_disk",
    "vm_db_disk",
    "vm_api_disk",
    "network_gateway",
    "network_dns",
    "network_subnet",
    "domain_name",
    "api_domain_name"
  ],
  "properties": {
    "company_code": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "environment": { "type": "string", "enum": ["prod", "staging", "dev"] },
    "hyperv_host": { "type": "string" },
    "vlan_id": { "type": "integer", "minimum": 1, "maximum": 4094 },
    "vm_app_name": { "type": "string" },
    "vm_db_name": { "type": "string" },
    "vm_api_name": { "type": "string" },
    "vm_app_ip": { "type": "string" },
    "vm_db_ip": { "type": "string" },
    "vm_api_ip": { "type": "string" },
    "vm_app_cpu": { "type": "integer", "minimum": 1 },
    "vm_app_memory": { "type": "integer", "minimum": 1024 },
    "vm_db_cpu": { "type": "integer", "minimum": 1 },
    "vm_db_memory": { "type": "integer", "minimum": 2048 },
    "vm_api_cpu": { "type": "integer", "minimum": 1 },
    "vm_api_memory": { "type": "integer", "minimum": 1024 },
    "vm_app_disk": { "type": "integer", "minimum": 10 },
    "vm_db_disk": { "type": "integer", "minimum": 20 },
    "vm_api_disk": { "type": "integer", "minimum": 10 },
    "network_gateway": { "type": "string" },
    "network_dns": { "type": "string" },
    "network_subnet": { "type": "string" },
    "domain_name": { "type": "string" },
    "api_domain_name": { "type": "string" }
  }
}
